/* pages/message/message.wxss */
page{
  background-color:#f1f1f1;
}
.card{
  background-color:#fff;
  border:1rpx solid #ddd;
  border-radius:20rpx;
  margin:60rpx 20rpx;
  padding:30rpx;
  display: flex;
  flex-direction: column; /*按列排放*/
}
.card-title{
  font-size:20px;
  margin-bottom: 20rpx;
}
.card-date{
  font-size: 14px;
  color:#ccc;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.card-image{
  width:100%;
  height:300rpx;
}
.card-desc{
  font-size:16px;
  color: #333;  /*文字深色*/
  padding-bottom: 20rpx; /*底部边线*/
  border-bottom: 1rpx solid #ddd;
  margin:20rpx 0;
}
.card-read{
  font-size: 14px;
  color:#666;
}