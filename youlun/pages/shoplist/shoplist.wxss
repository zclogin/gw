/* 1.组件白色背景 */
page{
  background:#fff;
}
/*2.当前商品的条目 */
.shop{
  padding:20rpx;
  border-bottom:1rpx solid #ddd;
  display: flex;
  position: relative;
}
/* 3.当前商品的图片 */
.shop-img{
  width:160rpx;
  height:158rpx;
  margin-right:20rpx;
}
/* 4.商品信息 */
.shop-info{
  display:flex;
  flex-direction: column;
  font-size:12px;
  color:#6d6d6d;
  width:520rpx;
  line-height:1.5;
}
/* 5.店铺名称 */
.shop-title{
  font-size:16px;
  color:#333;
  width:380rpx;
}
